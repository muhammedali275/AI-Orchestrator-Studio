# ZainOne Orchestrator Studio - Environment Configuration

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=ZainOne Orchestrator Studio
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# API Settings
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# LLM Configuration - Local Ollama
# ============================================================================
LLM_BASE_URL=http://localhost:11434
LLM_DEFAULT_MODEL=ollama:llama2
LLM_TIMEOUT_SECONDS=120
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ============================================================================
# Memory Configuration
# ============================================================================
MEMORY_ENABLED=true
MEMORY_MAX_MESSAGES=50
MEMORY_SUMMARY_ENABLED=true

# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# ============================================================================
# Orchestration Configuration
# ============================================================================
ORCHESTRATION_MAX_ITERATIONS=10
ORCHESTRATION_TIMEOUT_SECONDS=300

# ============================================================================
# Monitoring Configuration
# ============================================================================
MONITORING_ENABLED=true
MONITORING_EXPORT_INTERVAL=60
