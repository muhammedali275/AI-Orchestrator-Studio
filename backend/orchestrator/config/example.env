# exampleOne Orchestrator Studio - Environment Configuration Example
# Copy this file to .env and update with your actual values

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=exampleOne Orchestrator Studio
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# API Settings
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# LLM Configuration
# ============================================================================
# Base URL for your LLM server (Ollama, OpenAI-compatible, etc.)
LLM_BASE_URL=http://localhost:11434
LLM_DEFAULT_MODEL=llama2
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
# Optional: API key for commercial LLM providers
LLM_API_KEY=

# ============================================================================
# External Agent Configuration (Single Agent - Backward Compatibility)
# ============================================================================
# For multiple agents, use agents.json instead
EXTERNAL_AGENT_BASE_URL=http://localhost:8001
EXTERNAL_AGENT_AUTH_TOKEN=
EXTERNAL_AGENT_TIMEOUT_SECONDS=30

# ============================================================================
# Data Source Configuration (Single Source - Backward Compatibility)
# ============================================================================
# For multiple datasources, use datasources.json instead
DATASOURCE_BASE_URL=http://localhost:4000
DATASOURCE_AUTH_TOKEN=
DATASOURCE_TIMEOUT_SECONDS=30

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
# Option 1: Provide individual components
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=orchestrator
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=orchestrator_db

# Option 2: Provide complete DSN (overrides individual components)
# POSTGRES_DSN=postgresql://orchestrator:your_password_here@localhost:5432/orchestrator_db

# ============================================================================
# Redis Configuration
# ============================================================================
# Option 1: Provide individual components
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SECONDS=3600

# Option 2: Provide complete URL (overrides individual components)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Vector Database Configuration
# ============================================================================
VECTOR_DB_TYPE=chroma
VECTOR_DB_URL=http://localhost:8001
VECTOR_DB_API_KEY=
VECTOR_DB_COLLECTION=orchestrator_vectors
VECTOR_DB_DIMENSION=1536

# ============================================================================
# Memory Configuration
# ============================================================================
MEMORY_ENABLED=true
MEMORY_MAX_MESSAGES=50
MEMORY_SUMMARY_ENABLED=true

# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# ============================================================================
# Tool Configuration
# ============================================================================
# Path to tools configuration JSON file
TOOLS_CONFIG_PATH=./config/tools.json
TOOLS_EXECUTION_TIMEOUT=30
TOOLS_MAX_CONCURRENT=5

# ============================================================================
# Multi-Instance Configuration Paths
# ============================================================================
# Path to datasources configuration JSON file
DATASOURCES_CONFIG_PATH=./config/datasources.json

# ============================================================================
# Grounding/RAG Configuration
# ============================================================================
GROUNDING_ENABLED=true
GROUNDING_TOP_K=5
GROUNDING_SIMILARITY_THRESHOLD=0.7

# ============================================================================
# Orchestration Configuration
# ============================================================================
ORCHESTRATION_MAX_ITERATIONS=10
ORCHESTRATION_TIMEOUT_SECONDS=300

# ============================================================================
# Monitoring Configuration
# ============================================================================
MONITORING_ENABLED=true
MONITORING_EXPORT_INTERVAL=60

# ============================================================================
# Security Configuration
# ============================================================================
AUTH_ENABLED=false
AUTH_SECRET_KEY=your-secret-key-here-change-in-production
AUTH_ALGORITHM=HS256
AUTH_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Credential Encryption Configuration
# ============================================================================
# Master encryption key for credential storage
# CRITICAL: This key is used to encrypt/decrypt all stored credentials
# Generate a new key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# NEVER commit this key to version control
# NEVER share this key
# Store securely in production (e.g., AWS Secrets Manager, Azure Key Vault)
ORCH_CRED_KEY=your-fernet-key-here-generate-new-key-for-production
